datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PAYMENT")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model Payment {
  id        String   @id @default(cuid())
  orderId   String
  method    String
  amountInt Int
  status    String   @default("PENDING")
  payload   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}